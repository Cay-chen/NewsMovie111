<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/ll_one_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_food_photo"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:background="@drawable/img_two_bi_one"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_food_photo_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/colorContent"
                android:textSize="12sp" />

        </LinearLayout>
        <View
            android:layout_below="@+id/ll_one_photo"
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="10dp"
            android:background="#E0E0E0" />

        <TextView
            android:id="@+id/tx_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="现在暂不可以根据个人喜好，自由调整首页项目顺序~"
            android:textColor="#7D7D7D"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/ll_change_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tx_text"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/home_adjust_background"
            android:clickable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="调整栏目顺序"
                android:textColor="@color/colorTheme"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</layout>